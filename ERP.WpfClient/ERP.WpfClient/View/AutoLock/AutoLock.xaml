<UserControl x:Class="ERP.WpfClient.View.AutoLock.AutoLock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ERP.WpfClient.View.AutoLock"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400">
    <Grid  Background="{StaticResource CommonWhiteBackgroundColor}">
        <StackPanel>

            <TextBlock Grid.Row="0" Grid.Column="0" TextWrapping="Wrap" Text="Your Free Trial is Expired" Foreground="Red" Style="{StaticResource DashboardParentText}" Height="367" Margin="53,23,53,10"/>

            <Button Click="Button_Click" Style="{StaticResource AcceptButton}" Content="ShutDown" HorizontalAlignment="Center"/>
        </StackPanel>

    </Grid>
</UserControl>
